CC 		= clang 
CXX     = clang++ 
ARCH    ?= i386
ARCHDIR := arch/$(ARCH)

CFLAGS	:= -Iinclude -D__KERNEL__ -D_$(ARCH)_ -std=c11 -ffreestanding -O2 -Wall -Wextra -target $(ARCH)-unknown-none-gnu
CPPFLAGS:= -Iinclude -D__KERNEL__ -D_$(ARCH)_ -std=c++11 -ffreestanding -O2 -Wall -Wextra -target $(ARCH)-unknown-none-gnu \
    -fno-exceptions -fno-rtti -fno-builtin -nostdlib
LDFLAGS	:= -v -nostdlib -z max-page-size=0x1000 -target $(ARCH)-unknown-none-gnu -Wl,--build-id=none