CC 		:= clang 
CXX     := clang++ 
ARCH    ?= i386
ARCHDIR := arch/$(ARCH)

CFLAGS	:= -I$(TOP)kernel/include -D__KERNEL__ -m32 -std=c11 -ffreestanding -O2 -Wall -Wextra -g
CPPFLAGS:= -I$(TOP)kernel/include -D__KERNEL__ -m32 -std=c++11 -ffreestanding -O2 -Wall -Wextra -g
LDFLAGS	:= -nostdlib -target $(ARCH)--unknown-none-gnu -Wl,--build-id=none